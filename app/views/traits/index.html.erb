<h1>Listing traits</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Person</th>
    <th>Phenotype</th>
    <th>Value</th>
    <th>Output order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @traits.each do |trait| %>
  <tr>
    <td><%= trait.id %></td>
    <td><%= trait.person_id %></td>
    <td><%= trait.phenotype_id %></td>
    <td><%= trait.value %></td>
    <td><%= trait.output_order %></td>
    <td><%= link_to 'Show', trait %></td>
    <td><%= link_to 'Edit', edit_trait_path(trait) %></td>
    <td><%= link_to 'Destroy', trait, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

