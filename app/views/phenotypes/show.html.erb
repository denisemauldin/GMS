<p id="notice"><%= notice %></p>

<p>
  <b>Condition:</b>
  <%= @phenotype.condition.name if @phenotype.condition %>
</p>

<p>
  <b>Name:</b>
  <%= @phenotype.name %>
</p>

<p>
  <b>Tag:</b>
  <%= @phenotype.tag %>
</p>
<p>
  <b>Madeline Display?</b>
  <%= t @phenotype.madeline_display %>
</p>
<p>
  <b>Description:</b>
  <%= @phenotype.description %>
</p>


<%= link_to 'Edit', edit_phenotype_path(@phenotype) %> |
<%= link_to 'Back', phenotypes_path %><br />

<% if (@phenotype.people.size > 0) then %>
<p><b>People with this phenotype:</b></p>
<% @people = @phenotype.people.paginate :page => params[:page], :per_page => 100 %>
<%= render 'people_phenotypes' %>
<% else %>
<p>No people with this phenotype</p>
<% end %>
