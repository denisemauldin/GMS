<script>
  $(document).ready(function() { setupTablesorter() });
</script>
<h1>Listing people</h1>
<%= render "partials/filter" %>
<table class="tablesorter">
  <thead>
  <tr>
    <th>ISB Person ID</th>
    <th>Collaborator ID</th>
    <th>Pedigree</th>
    <th>Gender</th>
    <th>Birth Date</th>
    <th>Death Date</th>
    <th colspan="3" class="nosort">Controls</th>
  </tr>
  </thead>
  <tbody>
<% @people.each do |person| %>
  <tr>
    <td style="width: 100px;"><%= person.isb_person_id %></td>
    <td><%= person.collaborator_id %></td>
    <td><%= person.pedigree.name if person.pedigree %></td>
    <td style="width: 50px;"><%= person.gender %></td>
    <td style="width: 50px;"><%= person.dob %></td>
    <td style="width: 50px;"><%= person.dod %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
<% if false %>    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Person', new_person_path %>
