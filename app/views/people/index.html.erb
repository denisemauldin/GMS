<h1>Listing people</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Sample</th>
    <th>Subject</th>
    <th>Gender</th>
    <th>Dob</th>
    <th>Dod</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.id %></td>
    <td><%= person.sample_id %></td>
    <td><%= person.subject_id %></td>
    <td><%= person.gender %></td>
    <td><%= person.dob %></td>
    <td><%= person.dod %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

