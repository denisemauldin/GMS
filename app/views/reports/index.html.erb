<h1>Listing reports</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.name %></td>
    <td><%= report.description %></td>
    <td><%= report.type %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= button_to 'Delete report', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

