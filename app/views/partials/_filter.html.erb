
<%= form_tag("#", :method => "get") do %>
  <% pedigree_id = params[:pedigree][:id].to_i if params[:pedigree] && params[:pedigree][:id] %>
  <%= collection_select(:pedigree, :id, Pedigree.all(:include => :study, :order => ['studies.name', 'pedigrees.name']), :id, :name, options = {:include_blank => '-Select a pedigree to filter by', :selected => pedigree_id}, :class => "pedigree_select") %>
  <% if params[:controller] == 'assay_files' %>
    <%= select_tag(:file_type, options_from_collection_for_select(AssayFile.group(:file_type), :file_type, :file_type, params[:file_type]), {:include_blank => '-Select a file_type to filter by', :class => "file_type_select"}) %>
  <% end %>
  <%= submit_tag("Filter") %>
<% end %>

